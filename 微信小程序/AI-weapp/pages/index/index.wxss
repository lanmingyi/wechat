.slides swiper{
  height:320rpx;
} 
.slides navigator{
  width: 100%;
  height: 100%;
}
.slides image{
  width: 100%;
  height: 100%;
}

/* 文本设置 */
.box{
  margin-top: 10rpx;
  border: 3px solid silver;
  padding: 20rpx;
}
.title{
  font-size: 25px;
  text-align: center;
  margin-bottom: 15rpx;
}
.textStyle01{
  letter-spacing: 5rpx;
  text-align: left;
  text-indent: 35px;
  text-decoration: underline;
  text-decoration-color: blue;
  line-height: 30px;
  white-space: normal;
}
.textStyle02{
  text-align: justify; /*英文两端对齐*/
}


.button-text {
  width: 100%;
  line-height: 30px;
  font-size: 34rpx;
  color: #007aff;
}

