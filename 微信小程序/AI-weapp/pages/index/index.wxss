/* 首页导航 */
.nav_warp{

}
.nav{
  white-space: nowrap;
  padding: 5rpx 0;
}
.nav_item{
  padding: 20rpx 45rpx;
  font-size: 30rpx;
  display: inline-block;
  color: #666;
}
.nav_item.active{
  border-bottom: 5rpx solid red;
}

/* 轮播图 */
.slides{
  margin-top: 10rpx;
}
/* swiper{
